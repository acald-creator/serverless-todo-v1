{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "~*": [
                "./"
            ]
        },
        "allowJs": true,
        "checkJs": true,
        "diagnostics": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowUnusedLabels": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ESNext"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ESNext",
        "outDir": "build",
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "importHelpers": false,
        "isolatedModules": true,
        "pretty": true,
        "sourceMap": true,
        "removeComments": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*", "index.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*"
    ]
}